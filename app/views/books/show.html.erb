<html>
<header></header>

<body>


	<div class="container">
		<div class="row">
		 <div class="col-xs-3">
		 	<h2>User info</h2>
			 <%= attachment_image_tag current_user, :image , :size => '100x100'%><br>

			 <table class="table">
			 	<tbody>
			 		<tr>
			 			<td><%= 'name' %></td>
			 			<td><%= current_user.name %></td>
			 		</tr>
			 		<tr>
			 			<td><%= 'introduction' %></td>
						<td><%= current_user.introduction %></td>
					</tr>
				</tbody>
			</table>

				<%= link_to edit_user_path(current_user) do %>
					<button type="button" class="btn btn-default btn-lg btn-block"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></button>
				<% end %>


			 <h2>New book</h2>
	  			<%= form_for(@new) do |f| %>
	  				<label>Title</label><br>
	  					<%= f.text_field :title %><br>
	  				<label>Opinion</label><br>
	    				<%= f.text_area :body %>
	  				<br>
	    				<%= f.submit 'Create Book' %>
	  			<% end %>
		 </div>
		 <div class="col-xs-9">
		 	<h2>Book detail</h2>

			<% if @book.user.id == current_user.id %>
			 	<table class="table table-hover">
				    <thead>
				      <tr>
				      	<th></th>
				        <th>Title</th>
				        <th>Opinion</th>
				        <th colspan="2">
				      </tr>
				    </thead>
				    	<tbody>
						      <tr>
						      		<td>
						      			<% if @book.user.image_id.nil? %>
			 								<%= image_tag 'no_image.jpg', :size => '40x40' %>
			 							<% else %>
			 								<%= attachment_image_tag @book.user, :image , :size => '40x40'%>
			 							<% end %>
			 						</td>
							        <td><%= @book.title %></td>
							        <td><%= @book.body %></td>
							        <td><%= link_to "Edit", edit_book_path(@book) %></td>
								 	<td><%= link_to 'Destroy', book_path(@book), method: :delete, "data-confirm" => "	Are you sureï¼Ÿ"%></td>

						      </tr>
						</tbody>
				  </table>

			<% else %>

				<table class="table table-hover">
				    <thead>
				      <tr>
				      	<th></th>
				        <th>Title</th>
				        <th>Opinion</th>
				      </tr>
				    </thead>
				    	<tbody>
						      <tr>
						      		<td>
						      			<% if @book.user.image_id.nil? %>
			 								<%= image_tag 'no_image.jpg', :size => '40x40' %>
			 							<% else %>
			 								<%= attachment_image_tag @book.user, :image , :size => '40x40'%>
			 							<% end %>
			 						</td>
							        <td><%= @book.title %></td>
							        <td><%= @book.body %></td>

						      </tr>
						</tbody>
				  </table>
			<% end %>



		</div>
	</div>
</body>
</html>
