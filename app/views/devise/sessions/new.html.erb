
<div class="container">
      <div class="row">
        <div class="col-xs-3">

              <h2>Log in</h2>

              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="field">
                  <label>Email</label>
                  <label class="control-label sr-only" for="inputEmail">Email</label>
                  <%= f.email_field :email, autofocus: true, class:"form-control", id:"inputEmail" %>
                </div>

                <div class="field">
                  <label>Password</label>
                  <label class="control-label sr-only" for="inputEmail">Password</label>
                    <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputEmail" %>
                </div>

                <% if devise_mapping.rememberable? -%>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end -%>

                <div class="actions">
                  <%= f.submit "Log in" %>
                </div>
              <% end %>

              <%= render "devise/shared/links" %>
        </div>
      </div>
</div>
