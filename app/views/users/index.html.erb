
<html>

<body>

	<div class="container">
		<div class="row">
		 <div class="col-xs-3">
		 	<h2>User info</h2>
			 	<% if current_user.image_id.nil? %>
		 			<%= image_tag 'no_image.jpg', :size => '100x100' %>
		 		<% else %>
		 			<%= attachment_image_tag current_user, :image , :size => '100x100'%>
		 		<% end %>

			 <table class="table">
			 	<tbody>
			 		<tr>
			 			<td><%= 'name' %></td>
			 			<td><%= current_user.name %></td>
			 		</tr>
			 		<tr>
			 			<td><%= 'introduction' %></td>
						<td><%= current_user.introduction %></td>
					</tr>
				</tbody>
			</table>

			<%= link_to edit_user_path(current_user) do %>
				<button type="button" class="btn btn-default btn-lg btn-block"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></button>
			<% end %>

			 <h2>New book</h2>
	  			<%= form_for(@new) do |f| %>
	  				<label>Title</label><br>
	  					<%= f.text_field :title %><br>
	  				<label>Opinion</label><br>
	    				<%= f.text_area :body %>
	  				<br>
	    				<%= f.submit 'Create Book' %>
	  			<% end %>
		 </div>

		 <div class="col-xs-9">
			 <h2>Users</h2>
			  <table class="table table-hover">
			    <thead>
			      <tr>
			        <th>image</th>
			        <th>name</th>
			        <th></th>
			      </tr>
			    </thead>
				    <tbody>
				      <% @users.each do |user| %>
					      <tr>
						      	<td>
						      		<% if user.image_id.nil? %>
		 							<%= image_tag 'no_image.jpg', :size => '100x100' %>
		 						<% else %>
		 							<%= attachment_image_tag user, :image, :size => '100x100' %>
		 						<% end %>
		 						</td>
						        <td><%= user.name %></td>

						        <td><%= link_to "Show",user_path(user.id) %></td>

					      </tr>
					  <% end %>
				    </tbody>
			  </table>
		 </div>
		</div>
	</div>
</body>

</html>