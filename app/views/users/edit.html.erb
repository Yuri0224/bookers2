<h2>User info</h2>

<%= form_for(@user) do |f| %>
 <label>Name</label><%= f.text_field :name , class: 'form-control'%>
 <br>

 <label>Image</label><br>
 <%= f.attachment_field :image %>

 <br>
 <label>Introduction</label>
 <%= f.text_field :introduction , class: 'form-control'%>
<br>
 <%= f.submit "Update User" %>
 <% end %>


